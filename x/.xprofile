#!/bin/sh

userresources=$HOME/.Xresources
use=$HOME/.Xmod 2>&1 >/dev/null &ap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps


if [ -f $sysresources ]; then
    xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

# start some nice programs

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

#Setting environment variable for QT5
export QT_QPA_PLATFORMTHEME=qt5ct 

# Resolution 
xrandr --output HDMI-1 --same-as eDP-1 

# Key Binds
xbindkeys

# DWM Status
#dwmstatus 2>&1 /dev/null &
exec slstatus &

# Compositor 
picom -f & 

# Wallpaper
nitrogen --restore & 

#DPMS 
# xset s 1200 1200
# xset dpms 1800 1800 3600

# Session lock
xidlehook --not-when-fullscreen --not-when-audio --timer 600 'slock' '' --timer 600 'xset s activate' \
    'xset s reset' --timer 600 'xset dpms force suspend' '' --timer 1200 'xset force off' '' &

xhost +

# Loop for restarting dwm 
while true; do
		dwm >/dev/null 2>&1
done

# Execute DWM
exec dwm 
